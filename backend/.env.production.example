# Production Environment Variables
# Copy this to .env and fill in actual values

# Application
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database (Use managed PostgreSQL in production)
DATABASE_URL=postgresql://username:password@hostname:5432/database

# Redis (Use managed Redis in production)
REDIS_HOST=redis-hostname
REDIS_PORT=6379
REDIS_PASSWORD=

# Celo Blockchain
CELO_RPC_URL=https://forno.celo.org
RONPAY_TREASURY_ADDRESS=0x...

# AI Services
ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_GEMINI_API_KEY=  # Optional alternative

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...
TWILIO_WHATSAPP_NUMBER=whatsapp:+1...

# VTPASS (Bill Payments)
VTPASS_API_KEY=...
VTPASS_SECRET_KEY=...
VTPASS_PUBLIC_KEY=...

# Monitoring & Error Tracking
SENTRY_DSN=https://...@sentry.io/...

# Security
JWT_SECRET=  # If using authentication
ENCRYPTION_KEY=  # For sensitive data

# Rate Limiting (optional overrides)
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=30

# Transaction Limits (optional overrides)
MAX_DAILY_VOLUME_USD=50000
MAX_DAILY_TRANSACTIONS=100
MAX_SINGLE_TX_USD=10000

# Feature Flags
ENABLE_SCHEDULER=true
ENABLE_NOTIFICATIONS=true
ENABLE_BILL_PAYMENTS=true
